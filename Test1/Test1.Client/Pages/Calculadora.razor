@page "/Calculadora2"
@rendermode InteractiveWebAssembly

<h2>Calculadora Básica</h2>

<div>
    <input @bind-value="numero1" placeholder="Número 1" type="number" />
    <input @bind-value="numero2" placeholder="Número 2" type="number" />

    <button @onclick="Sumar">➕ Sumar</button>
    <button @onclick="Restar">➖ Restar</button>
    <button @onclick="Multiplicar">✖️ Multiplicar</button>
    <button @onclick="Dividir">➗ Dividir</button>
    <button @onclick="Limpiar">🧹 Limpiar</button>

    <h3>Resultado: @resultado</h3>
</div>

@code {
    private double? numero1;
    private double? numero2;
    private double? resultado;

    private void Sumar()
    {
        if (numero1.HasValue && numero2.HasValue)
        {
            resultado = numero1 + numero2;
        }
    }

    private void Restar()
    {
        if (numero1.HasValue && numero2.HasValue)
        {
            resultado = numero1 - numero2;
        }
    }

    private void Multiplicar()
    {
        if (numero1.HasValue && numero2.HasValue)
        {
            resultado = numero1 * numero2;
        }
    }

    private void Dividir()
    {
        if (numero1.HasValue && numero2.HasValue)
        {
            if (numero2 != 0)
            {
                resultado = numero1 / numero2;
            }
            else
            {
                resultado = double.NaN; // Mostrar 'NaN' si se intenta dividir por 0
            }
        }
    }

    private void Limpiar()
    {
        numero1 = null;
        numero2 = null;
        resultado = null;
    }
}

<style>
    div {
        text-align: center;
    }
    input {
        margin: 5px;
        padding: 10px;
        font-size: 16px;
    }
    button {
        margin: 5px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
    }
    h3 {
        margin-top: 20px;
        color: #4CAF50;
    }
</style>